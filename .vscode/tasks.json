{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [

		{
			"label": "Build (configurable)",
			"type": "shell",
			"group": "build",
			"command": "west",
			"args": [
				"build",
				"-p", "${input:pristine}",
				"-b", "${input:board}",
				"${input:proj}"
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build sample",
			"type": "shell",
			"group": "build",
			"command": "west",
			"args": [
				"build",
				"-p", "always",
				"-b", "nucleo_f103rb",
				"/workspaces/zephyr/samples/basic/blinky"
			]
		},

		// FLASH
		{
			"label": "Flash sample",
			"type": "shell",
			"group": "build",
			"command": "west",
			"args": [
				"flash"
			],
		},
		// DEBUG
		{
			"label": "Debug sample",
			"type": "shell",
			"group": "build",
			"command": "west",
			"args": [
				"debug",
			],
		},

	],
	"inputs": [
		{
			"id": "board",
			"type": "pickString",
			"description": "See https://docs.zephyrproject.org/latest/boards/index.html",
			"default": "nucleo_f103rb",
			"options": [
				"nucleo_f103rb",
			]
		},
		{
			"id": "pristine",
			"type": "pickString",
			"description": "Choose when to run a pristine build",
			"default": "auto",
			"options": [
				"auto",
				"always",
				"never"
			]
		},
		{
			"id": "proj",
			"type": "pickString",
			"description": "Choose what project to build",
			"default": "/workspaces/zephyr/samples/basic/blinky",
			"options": [
				"/workspaces/zephyr/samples/basic/blinky"	// nucleo_f103rb
			]
		}
	]
}