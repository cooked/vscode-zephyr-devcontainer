{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		
		// utils
		{
			"label": "Echo Variable",
			"type": "shell",
			"group": "build",
			"command": "echo ${env:ZEPHYR_SDK_INSTALL_DIR}"
		},

		// BUILD
		{
			"label": "Build Zephyr sample",
			"type": "shell",
			"group": "build",
			"command": "west",
			"args": [
				"build",
				"${workspaceFolder}/../zephyr/samples/basic/${input:sample-proj}",
				"-p", "${input:pristine}",
				"-b", "${input:board}",
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build LOCAL sample",
			"type": "shell",
			"group": "build",
			"command": "west",
			"args": [
				"build",
				"${workspaceFolder}/samples/${input:sample-proj-local}",
				"-p", "auto",
				"-b", "${input:board}",
				//"-b", "${input:sample-board}",
			],
			"problemMatcher": [
				"$gcc"
			]
		},

		// FLASH
		{
			"label": "Flash sample",
			"type": "shell",
			"group": "build",
			"command": "west",
			"args": [
				"flash",
				"-r", "openocd"
			],
		},
		// DEBUG
		{
			"label": "Debug sample",
			"type": "shell",
			"group": "build",
			"command": "west",
			"args": [
				"debug",
			],
		},

	],

	// https://stackoverflow.com/questions/57977832/is-there-a-way-to-get-a-pickstring-dynamically-populated-in-a-vs-code-task
	
	"inputs": [
		// TODO: make this dynamic (selected or open file)
		{
			"id": "sample-proj",
			"type": "command",
			"command": "shellCommand.execute",
			"args": {
				"command": "ls -1 -d [^.]*/ | cut -f1 -d'/'",
				"cwd": "${workspaceFolder}/../zephyr/samples/basic/",
			},
		},

		{
			"id": "sample-proj-local",
			"type": "command",
			"command": "shellCommand.execute",
			"args": {
				"command": "ls -1 -d [^.]*/ | cut -f1 -d'/'",
				"cwd": "${workspaceFolder}/samples/",
			},
		},

		{
			"id": "sample-board",
			"type": "command",
			"command": "shellCommand.execute",
			"args": {
				"command": "ls -1 -d [^.]*/ | cut -f1 -d'/'",
				"cwd": "${workspaceFolder}/zephyr/boards/st",
			}
		},

		{
			"id": "board",
			"type": "pickString",
			"description": "See https://docs.zephyrproject.org/latest/boards/index.html",
			"default": "nucleo_f103rb",
			"options": [
				"nucleo_f103rb",
				"nucleo_g0b1re",
				"nucleo_l452re",
				"nucleo_l476rg",
			]
		},

		{
			"id": "pristine",
			"type": "pickString",
			"description": "Choose when to run a pristine build",
			"default": "auto",
			"options": [
				"auto",
				"always",
				"never"
			]
		},
		
	]
}